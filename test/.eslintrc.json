{
    "env": {
      "jasmine": true
    },
    "extends": [
      "../.eslintrc.json",
      "plugin:jest/recommended"
    ],
    "rules": {
      "import/no-nodejs-modules": ["error", {"allow": ["assert"]}],
      "jest/prefer-todo": "warn",
      "mocha/no-global-tests": "warn",
      "mocha/no-nested-tests": "error"
    },
    "plugins": [
      "jasmine",
      "jest",
      "mocha"
    ]
}
