{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
      "global-require": "off",
      "semi": "off",
      "no-process-exit": "error",
      "no-buffer-constructor": "warn",
      "no-process-env": "warn",
      "no-var": "warn",
      "init-declarations": ["error", "never", { "ignoreForLoopInit": true }],
      "no-unused-vars": "off"
    }
}
